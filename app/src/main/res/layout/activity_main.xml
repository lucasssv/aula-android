+<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.edu.fcv.firebaseapp.MainActivity">

    <TextView
        android:id="@+id/textViewArtista"
        android:layout_width="368dp"
        android:layout_height="64dp"
        android:text="TextView"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="4dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/buttonAdicionarFaixa" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="368dp"
        android:layout_height="49dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="78dp"
        tools:text="Escreva o nome do artista"
        android:layout_below="@+id/textViewArtista"
        android:layout_alignStart="@+id/textViewArtista" />

    <Spinner
        android:id="@+id/spinnerGeneros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextName"
        >
    </Spinner>
    <Button
        android:id="@+id/buttonAdicionarFaixa"
        android:layout_width="368dp"
        android:layout_height="48dp"
        android:text="ADICIONAR"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="134dp"
        android:layout_below="@+id/editText"
        android:layout_alignStart="@+id/listView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="370dp"
        android:layout_height="45dp"
        android:text="Faixas"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="189dp"
        android:layout_below="@+id/buttonAdicionarFaixa"
        android:layout_alignStart="@+id/buttonAdicionarFaixa" />

    <ListView
        android:layout_width="366dp"
        android:layout_height="245dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="248dp"
        android:id="@+id/listView"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
